<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tab3_time1" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tab3_time1"
        android:id="@+id/tab3_minus"
        android:textSize="50sp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_alignBottom="@+id/tab3_time1"
        android:layout_toEndOf="@+id/tab3_minus"
        android:layout_marginStart="11dp"
        android:id="@+id/tab3_time2" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/tab3_ok" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tab3_time1"
        android:layout_alignParentStart="true"
        android:id="@+id/tab3_list3" />
</RelativeLayout>
