<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tab2_price1"
        android:layout_alignParentTop="true"

        android:layout_alignParentStart="true"
        android:layout_width="120dp" />

    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tab2_price1"
        android:id="@+id/tab2_minus"
        android:layout_alignBottom="@+id/tab2_price2"
        android:textSize="50sp" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab2_ok"
        android:layout_alignBaseline="@+id/tab2_price2"
        android:layout_alignBottom="@+id/tab2_price2"
        android:layout_toEndOf="@+id/tab2_price2" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginStart="21dp"
        android:id="@+id/tab2_price2"
        android:layout_width="120dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tab2_minus" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tab2_price1"
        android:layout_alignParentStart="true"
        android:id="@+id/tab2_list2" />
</RelativeLayout>