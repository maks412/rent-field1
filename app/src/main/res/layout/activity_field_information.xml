<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Информация"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_pager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView5"
        android:textSize="24sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v4.view.ViewPager>

    <TextView
        android:text="OLZHA SPORT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_name"
        android:textSize="24sp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Цена:5000тг"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_price"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/info_name"
        android:layout_alignStart="@+id/info_name" />

    <TextView
        android:text="Время"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/info_time"
        android:textSize="24sp"
        android:layout_below="@+id/info_tel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Тел:8777-777-77-77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/info_tel"
        android:textSize="24sp"
        android:layout_below="@+id/info_address"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_address"
        android:textSize="24sp"

        android:layout_below="@+id/info_price"
        android:layout_alignEnd="@+id/info_name"
        android:layout_alignStart="@+id/info_price"
        android:paddingTop="10dp" />
</RelativeLayout>